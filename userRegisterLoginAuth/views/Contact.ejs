<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Contact</title>
  <!-- Font Icon -->
  <link rel="stylesheet"
    href="https://cdn.jsdelivr.net/npm/material-design-iconic-font@2.2.0/dist/css/material-design-iconic-font.min.css" />

  <!-- Main css -->
  <link rel="stylesheet" href="style.css" />
</head>

<body>
  <!-- added Navbar using ejs File -->
  <%- include("./partials/Header") %>

    <main class="container profile-container">
      <h1 class="page-title">Your Contact</h1>
      <div class="user-status">
        <% if(user) { %>
          <div class="status-badge success">
            <i class="zmdi zmdi-check-circle"></i>
            <span>You are logged in</span>
          </div>
          <% } else { %>
            <div class="status-badge warning">
              <i class="zmdi zmdi-alert-circle"></i>
              <span>You are not logged in</span>
            </div>
            <% } %>
      </div>
      <div class="contact-card">
        <div class="change-password-form">
          <h1 class="form-title">Contact Your</h1>
          <form action="/contact" method="post" id="contact-form">
            <div class="form-group">
              <label for="name"></label>
              <div class="input-wrapper">
                <i class="zmdi zmdi-lock prefix-icon"></i>
                <input type="text" name="name" id="name" placeholder="Enter your Nmae" autocomplete="off" />
              </div>
            </div>
            <div class="form-group">
              <label for="number"></label>
              <div class="input-wrapper">
                <i class="zmdi zmdi-lock-outline prefix-icon"></i>
                <input type="text" name="number" id="number" placeholder="Enter your number" autocomplete="off" />
              </div>
            </div>
            <div class="form-group">
              <label for="email"></label>
              <div class="input-wrapper">
                <i class="zmdi zmdi-lock-outline prefix-icon"></i>
                <input type="email" name="email" id="email" placeholder="Enter your email" autocomplete="off" />
              </div>
            </div>
            <div class="form-group">
              <label for="message"></label>
              <div class="input-wrapper">
                <i class="zmdi zmdi-lock-outline prefix-icon"></i>
                <input type="text" name="message" id="message" placeholder="Enter your message" autocomplete="off" />
              </div>
            </div>

            <% if ((errors && errors.length> 0)) { %>
              <div class="error-container">
                <% errors.forEach((error)=> { %>
                  <p class="flash-error">
                    <%= error %>
                  </p>
                  <% }); %>
              </div>
              <% } %>

                <div class="form-group form-button">
                  <button type="submit" class="form-submit">
                    Submit
                  </button>
                </div>
          </form>
        </div>
      </div>
      </div>
    </main>

    <!-- added Footer using ejs File -->
    <%- include("./partials/Footer") %>
</body>

</html>